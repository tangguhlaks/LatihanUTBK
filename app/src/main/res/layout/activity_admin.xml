<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/logoo"
            />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang Admin"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:textSize="25dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/datauser"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#7acbcd"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data User"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffff"
                android:padding="15dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/datasoal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#7acbcd"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Soal"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffff"
                android:padding="15dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/keluar"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#FF6161"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluar"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:textColor="#ffff"
                android:padding="15dp"/>
        </androidx.cardview.widget.CardView>
        <com.google.android.gms.ads.AdView
            android:layout_marginTop="200dp"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adView"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-8529683226102901/2416754475">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

</ScrollView>